<Page
    x:Class="QuickAnimator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuickAnimator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Canvas Name="InkCanvas" Background="White" Margin="0,0,0,0" PointerMoved="InkCanvas_OnPointerMoved" />
        <Image Name="image" HorizontalAlignment="Left" Height="230.5" Margin="1080,214.5,0,0" VerticalAlignment="Top" Width="261"/>
        <TextBlock HorizontalAlignment="Left" Margin="1111.5,163,0,0" TextWrapping="Wrap" Text="Clipboard Image" VerticalAlignment="Top" Height="33" Width="210" FontSize="24"/>
    </Grid>
    <Page.TopAppBar>
        <AppBar x:Name="toolbox" Padding="10,0,10,0" PointerMoved="Toolbox_OnPointerMoved">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button x:Name="Lapiz" AutomationProperties.Name="Dibujar" Grid.Column="1" Margin="10"
                            Click="SelectSize"
                            Style="{StaticResource EditAppBarButtonStyle}" RenderTransformOrigin="0.5,0.5">                 
                    </Button>
                    <Button x:Name="Borrador" AutomationProperties.Name="Borrar" Grid.Column="2" Margin="10" 
                            Click="SelectEraserSize"
                            Style="{StaticResource TrimAppBarButtonStyle}"/>
                    <Button x:Name="ModeSelect" AutomationProperties.Name="Select" Grid.Column="3" Margin ="10"
                            Click="Select"
                            Style="{StaticResource SelectAllAppBarButtonStyle}"/>
                    <Button x:Name="ClearAll" AutomationProperties.Name="Limpiar" Grid.Column="3" Margin ="10"
                            Click="Clear"
                            Style="{StaticResource ClearAllAppBarButtonStyle}"/>
                    
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.TopAppBar>
    <Page.BottomAppBar>
        <AppBar Visibility="Visible">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="Frame1" AutomationProperties.Name="Dibujar" Grid.Column="1" Margin="10"
                                    Click="SelectSize"
                                    Width="200"
                                    Height="120"
                                    Background="White" RenderTransformOrigin="0.5,0.5">
                    </Button>
                    <Button x:Name="Frame2" AutomationProperties.Name="Dibujar2" Grid.Column="2" Margin="10"
                                    Click="SelectSize"
                                    Width="200"
                                    Height="120"
                                    Background="White" RenderTransformOrigin="0.5,0.5">
                    </Button>
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
</Page>
