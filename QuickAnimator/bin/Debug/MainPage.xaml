<Page
    x:Class="QuickAnimator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuickAnimator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:ConnectionId='1' Name="InkCanvas" Background="White" Margin="0,0,0,0"                                         />
        <Image Name="image" HorizontalAlignment="Left" Height="230.5" Margin="1080,214.5,0,0" VerticalAlignment="Top" Width="261"/>
        <TextBlock HorizontalAlignment="Left" Margin="1111.5,163,0,0" TextWrapping="Wrap" Text="Clipboard Image" VerticalAlignment="Top" Height="33" Width="210" FontSize="24"/>
    </Grid>
    <Page.TopAppBar>
        <AppBar x:ConnectionId='2' x:Name="toolbox" Padding="10,0,10,0"                                      >
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button x:ConnectionId='3' x:Name="Lapiz" AutomationProperties.Name="Dibujar" Grid.Column="1" Margin="10"
                                              
                            Style="{StaticResource EditAppBarButtonStyle}" RenderTransformOrigin="0.5,0.5">                 
                    </Button>
                    <Button x:ConnectionId='4' x:Name="Borrador" AutomationProperties.Name="Borrar" Grid.Column="2" Margin="10" 
                                                    
                            Style="{StaticResource TrimAppBarButtonStyle}"/>
                    <Button x:ConnectionId='5' x:Name="ModeSelect" AutomationProperties.Name="Select" Grid.Column="3" Margin ="10"
                                          
                            Style="{StaticResource SelectAllAppBarButtonStyle}"/>
                    <Button x:ConnectionId='6' x:Name="ClearAll" AutomationProperties.Name="Limpiar" Grid.Column="3" Margin ="10"
                                         
                            Style="{StaticResource ClearAllAppBarButtonStyle}"/>
                    
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.TopAppBar>
    <Page.BottomAppBar>
        <AppBar Visibility="Visible">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='7' x:Name="Frame1" AutomationProperties.Name="Dibujar" Grid.Column="1" Margin="10"
                                                      
                                    Width="200"
                                    Height="120"
                                    Background="White" RenderTransformOrigin="0.5,0.5">
                    </Button>
                    <Button x:ConnectionId='8' x:Name="Frame2" AutomationProperties.Name="Dibujar2" Grid.Column="2" Margin="10"
                                                      
                                    Width="200"
                                    Height="120"
                                    Background="White" RenderTransformOrigin="0.5,0.5">
                    </Button>
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
</Page>

